{
  "flex-layout.row#deals": {
    "children": [
      "flex-layout.col#deals1",
      "flex-layout.col#deals2",
      "flex-layout.col#parcelamento",
      "flex-layout.col#deals4",
      "flex-layout.col#deals5"
    ],
    "props": {
      "blockClass": ["deals", "mobile-deals"]
    }
  },

  "flex-layout.col#deals1": {
    "props": {
      "blockClass": "coluna-deals",
      "colSizing": "auto"
    },
    "children": [
      "image#deal1",
      "rich-text#deal1",
      "rich-text#sub-deal1"
    ]
  },
  "image#deal1": {
    "props": {
      "src": "assets/home-black/icon-caminhao.webp",
      "blockClass": "img-deals"
    }
  },
  "rich-text#deal1": {
    "props": {
      "text": "**ENTREGAS PARA\n TODO O BRASIL**",
      "blockClass": "deals"
    }
  },
  "rich-text#sub-deal1":{
    "props": {
      "text": "Nós entregamos onde for melhor para você e o seu negócio",
      "blockClass": "sub-mobile-deals"
    }
  },

